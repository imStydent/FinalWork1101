<Window x:Class="FragrantWorld.Windows.WorkWithOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FragrantWorld.Windows"
        mc:Ignorable="d"
        Title="Редактирование и посмотр заказов" Height="490" Width="800" WindowStartupLocation="CenterScreen" FontFamily="Comic Sans MS" 
        MinHeight="490" MinWidth="800" SizeToContent="WidthAndHeight" Icon="/Pictures/icon.ico">
